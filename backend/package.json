{
    "name": "drafty",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Shaun Wallace",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "prod": "NODE_ENV=production node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,Frontend,Backend,Node\" -c \"yellow.bold,cyan.bold,blue.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-frontend\" \"npm run watch-backend\" \"npm run watch-node\"",
        "test-frontend": "jest --config ./src/public/js/jest.config.js",
        "test-frontend:debug": "node --inspect node_modules/.bin/jest --runInBand --config ./src/public/js/jest.config.js",
        "watch-test-frontend": "npm run test-frontend -- --watchAll",
        "watch-test-frontend:debug": "node --inspect node_modules/.bin/jest --runInBand --config ./src/public/js/jest.config.js --watchAll",
        "test": "npm run test-frontend && npm run test-backend",
        "test-backend": "jest --config ./jest.config.js",
        "watch-test-backend": "npm run test-backend -- --watchAll",
        "watch-test": "concurrently -k -p \"[{name}]\" -n \"Frontend Testing, Backend Testing\" -c \"red.bold,magenta.bold\" \"npm run watch-test-frontend\" \"npm run watch-test-backend\"",
        "build-ts": "webpack --mode=production --config src/public/js/webpack.config.js && tsc -p tsconfig.json",
        "watch-frontend": "webpack --mode=development --watch --config src/public/js/webpack.config.js",
        "watch-backend": "tsc -w -p tsconfig.json",
        "build-sass": "node-sass src/public/css/main.scss -o dist/public/css/",
        "watch-sass": "node-sass -w src/public/css/main.scss -o dist/public/css/",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,blue.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-frontend\" \"npm run watch-backend\" \"npm run serve-debug\"",
        "clear-logs": ": > debug.log"
    },
    "dependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/js-yaml": "^3.12.5",
        "@types/session-file-store": "^1.2.1",
        "@types/uuid": "^8.3.0",
        "acorn": "^8.4.1",
        "async": "^3.2.0",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-handlebars": "^3.1.0",
        "express-mysql-session": "^2.1.4",
        "express-session": "^1.17.1",
        "express-validator": "^6.5.0",
        "fuse.js": "^3.6.1",
        "fuzzysort": "^1.1.4",
        "glob-parent": "^5.1.2",
        "handlebars": "^4.7.6",
        "helmet": "^4.6.0",
        "jest-config": "^27.1.0",
        "js-yaml": "^3.14.0",
        "lodash": "^4.17.19",
        "lusca": "^1.6.1",
        "moment": "^2.26.0",
        "mustache": "^4.0.1",
        "mustache-express": "^1.3.0",
        "mysql2": "^2.1.0",
        "node-sass": "^7.0.0",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "request": "^2.88.2",
        "request-promise": "^4.2.5",
        "session-file-store": "^1.4.0",
        "set-value": "^4.0.1",
        "tar": "^6.1.11",
        "tmpl": "^1.0.5",
        "uuid": "^8.3.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.2.3",
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.11",
        "@types/compression": "^1.7.0",
        "@types/concurrently": "^5.2.0",
        "@types/dotenv": "^8.2.0",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.8.1",
        "@types/express": "^4.17.6",
        "@types/express-flash": "0.0.1",
        "@types/express-mysql-session": "^1.2.2",
        "@types/express-session": "^1.17.0",
        "@types/helmet": "^4.0.0",
        "@types/lusca": "^1.6.1",
        "@types/moment": "^2.13.0",
        "@types/mysql": "^2.15.13",
        "@types/mysql2": "github:types/mysql2",
        "@types/node": "^13.13.15",
        "@types/node-sass": "^4.11.1",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/pug": "^2.0.4",
        "@types/request": "^2.48.5",
        "@types/request-promise": "^4.1.46",
        "@types/shelljs": "^0.8.8",
        "@types/supertest": "^2.0.9",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "chai": "^4.2.0",
        "concurrently": "^6.3.0",
        "cypress": "^8.7.0",
        "eslint": "^8.2.0",
        "jest": "^27.3.1",
        "nodemon": "^2.0.4",
        "shelljs": "^0.8.5",
        "supertest": "^4.0.2",
        "ts-jest": "^25.5.1",
        "ts-loader": "^7.0.5",
        "ts-node": "^10.2.1",
        "typescript": "^3.9.3",
        "webpack": "^5.52.0",
        "webpack-cli": "^4.8.0",
        "wrap-ansi": "^6.1.0"
    }
}
