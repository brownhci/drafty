{
    "name": "drafty",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Shaun Wallace",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass src/public/css/main.scss -o dist/public/css/",
        "watch-sass": "node-sass -w src/public/css/main.scss -o dist/public/css/",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "clear-logs": ": > debug.log"
    },
    "dependencies": {
        "@types/helmet": "0.0.45",
        "@types/session-file-store": "^1.2.1",
        "acorn": "^7.1.0",
        "async": "^3.1.1",
        "axios": "^0.19.2",
        "bcrypt": "^3.0.8",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-handlebars": "^3.1.0",
        "express-mysql-session": "^2.1.3",
        "express-session": "^1.17.0",
        "express-validator": "^6.4.0",
        "fuse.js": "^3.4.6",
        "handlebars": "^4.7.3",
        "helmet": "^3.21.2",
        "lusca": "^1.6.1",
        "moment": "^2.24.0",
        "mustache": "^4.0.0",
        "mustache-express": "^1.3.0",
        "mysql2": "^2.1.0",
        "nodemailer": "^6.4.2",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "redis": "^3.0.2",
        "request": "^2.88.0",
        "request-promise": "^4.2.5",
        "session-file-store": "^1.4.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.7",
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.8",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^5.1.0",
        "@types/dotenv": "^8.2.0",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.8",
        "@types/express": "^4.17.2",
        "@types/express-flash": "0.0.1",
        "@types/express-mysql-session": "^1.2.2",
        "@types/express-session": "^1.15.16",
        "@types/jest": "^25.1.2",
        "@types/jquery": "^3.3.32",
        "@types/lusca": "^1.6.1",
        "@types/moment": "^2.13.0",
        "@types/mysql": "^2.15.8",
        "@types/mysql2": "github:types/mysql2",
        "@types/node": "^13.7.0",
        "@types/node-sass": "^4.11.0",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/pug": "^2.0.4",
        "@types/request": "^2.48.4",
        "@types/request-promise": "^4.1.45",
        "@types/shelljs": "^0.8.6",
        "@types/supertest": "^2.0.8",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "chai": "^4.2.0",
        "concurrently": "^5.1.0",
        "eslint": "^6.8.0",
        "jest": "^25.1.0",
        "node-sass": "^4.13.1",
        "nodemon": "^2.0.2",
        "shelljs": "^0.8.3",
        "supertest": "^4.0.2",
        "ts-jest": "^25.2.0",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    }
}
