<main id="account-container" class="centered-section-layout">
    <div>
        <h1>Hi, <span id="username">{{username}}</span></h1>
        <p>
            To receive credit at <i>Amazon Mechanical Turk</i>, please use this <b>animal code</b>: <b>rabbit_{{idProfile}}_{{idSession}}_{{idExpress}}</b>
        </p>
        <section>
            {{#if signedIn}}
                <h2>Reset your password</h2>
                <form method="post" action="/account/password" id="password-reset-form" class="custom-validation" autocomplete novalidate>
                    {{> csrf }}
                    {{> account/password-input-component showPasswordUsageExplanation=true }}
                    {{> account/confirm-input-component }}
                    <button type="submit">Update password</button>
                </form>
            {{else}}
                <h2>Sign in</h2>
                {{> account/signin-modal }}
                <h2>Create your account</h2>
                {{> account/signup-modal showEmailUsageExplanation=true }}
            {{/if}}
        </section>
        <section>
            <h2>New to Drafty?</h2>
            <div>
                Learn how to edit cells, add new rows, create interesting insights, and contact us at <a href="/help">help page</a>.
            </div>
        </section>
        <section>
            <h2>Proud of yourself</h2>
            <div>
                <p>
                    You are a valuable contributor to Drafty!
                </p>
            </div>
        </section>
        <!--
        <section>
            <h2>Want to be amazed?</h2>
        </section>
        -->
    </div>
</main>
<script src="/js/form.js"></script>
