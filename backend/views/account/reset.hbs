<main id="form-container">
    <div id="forget-component">
        <h1>Reset your password</h1>
        <form method="post" id="forget-form" class="custom-validation" autocomplete novalidate>
            {{> account/csrf }}
            <div>
                {{> account/email-label }}
                <input type="text" readonly class="form-control-plaintext" id="email" value="{{email}}">
            </div>
            <div>
                <label for="password">
                    New Password
                </label>
                <input type="password" class="form-control{{getValidationClass messages.passwordValidationFailure}}" id="password" name="password" placeholder="New password" autofocus required>
                {{#if messages.passwordValidationFailure}}
                    {{#with messages.passwordValidationFailure as |failure|}}
                        {{#each failure}}
                            <div class="invalid-tooltip">
                                {{msg}}
                            </div>
                        {{/each}}
                    {{/with}}
                {{else}}
                    <div class="invalid-feedback">
                        Please fill out the new password
                    </div>
                {{/if}}
            </div>
            <div>
                <label for="confirm">
                    Confirm Password
                </label>
                <input type="password" class="form-control{{getValidationClass messages.confirmValidationFailure}}" id="confirm" name="confirm" placeholder="Re-enter your new password" required>
                {{#if messages.confirmValidationFailure}}
                    {{#with messages.confirmValidationFailure as |failure|}}
                        {{#each failure}}
                            <div class="invalid-tooltip">
                                {{msg}}
                            </div>
                        {{/each}}
                    {{/with}}
                {{else}}
                    <div class="invalid-feedback">
                        Please fill out the confirm password field
                    </div>
                {{/if}}
            </div>
            <button type="submit">Change password</button>
        </form>
    </div>
</main>
<script src="/js/form.js"></script>
