<main id="form-container">
    <div id="forget-component">
        <h1>Reset your password</h1>
        <form method="post" id="forget-form" class="custom-validation" autocomplete novalidate>
            {{> account/csrf }}
            <div>
                <label for="email">Your Email</label>
                <input type="text" readonly class="form-control-plaintext" id="email" value="{{email}}">
            </div>
            {{> account/password-input-component showPasswordUsageExplanation=true }}
            <div>
                <label for="confirm">
                    Confirm Password
                </label>
                <input
                    id="confirm"
                    name="confirm"
                    type="password"
                    class="form-control{{getValidationClass messages.confirmValidationFailure}}"
                    placeholder="Re-enter your new password"
                    required>
                {{#if messages.confirmValidationFailure}}
                    {{#with messages.confirmValidationFailure as |failure|}}
                        {{#each failure}}
                            <div class="invalid-tooltip">
                                {{msg}}
                            </div>
                        {{/each}}
                    {{/with}}
                {{/if}}
                <div class="invalid-feedback">
                    Please fill out the confirm password field
                </div>
            </div>
            <button type="submit">Change password</button>
        </form>
    </div>
</main>
<script src="/js/form.js"></script>
