<main id="form-container">
    <div id="forget-component">
        <h1>Reset your password</h1>
        <form method="post" id="forget-form" class="custom-validation" autocomplete novalidate>
            {{> csrf }}
            <div>
                <label for="username">Your Username</label>
                <input type="text" readonly class="form-control-plaintext" id="username" value="{{username}}">
            </div>
            {{> account/password-input-component showPasswordUsageExplanation=true }}
            {{> account/confirm-input-component }}
            <button type="submit">Change password</button>
        </form>
    </div>
</main>
<script src="/js/bundles/form.js"></script>
